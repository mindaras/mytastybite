{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@data/*": ["src/data/*"],
      "@assets/*": ["src/assets/*"],
      "@common/*": ["src/common/*"],
      "@modules/*": ["src/modules/*"],
      "@i18n/*": ["src/i18n/*"],
      "@styles": ["src/common/styles/common.scss"],
      "@types": ["src/types.ts"],
      "@config": ["src/config/config.ts"],
      "@db": ["prisma/db.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "prisma/seed.mts",
    "prisma/sitemap.ts"
  ],
  "exclude": ["node_modules"]
}
